apiVersion: apps/v1
kind: Deployment
metadata:
  name: app1
  namespace: negis
  labels:
    app: app1
spec:
  replicas: 3  # Podのレプリカ数
  selector:
    matchLabels:
      app: app1
  template:
    metadata:
      labels:
        app: app1
    spec:
      containers:
        - name: app1-container
          image: myrepo/app1:latest  # コンテナイメージ
          ports:
            - containerPort: 8080
