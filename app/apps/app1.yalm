apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: app1
  namespace: negi
spec:
  project: default
  source:
    repoURL: 'https://github.com/AkashiyaSanta/argo.git'
    targetRevision: HEAD
    path: apps/app1  # アプリ1のマニフェストがあるディレクトリ
  destination:
    server: https://kubernetes.default.svc
    namespace: negi
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
